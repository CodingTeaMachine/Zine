<div class="w-56 h-96 hover:scale-110 hover:cursor-pointer transition duration-150 grid grid-rows-6">
	<div class="row-span-5 relative flex items-center justify-center covers">
		@{ var i = 0;}
		@foreach (var path in Paths)
		{
			<MudImage Src="@path" Elevation="5" class="aspect-comic-cover h-64 rounded-md absolute img"/>
			i++;
		}
	</div>
	<div class="text-lg text-center w-100 h-2">@Title</div>
</div>

@code {

	[Parameter]
	public string[] Paths { get; set; } = Array.Empty<string>();

	[Parameter]
	public string? Title { get; set; }

}
